---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="about-me">
  <h2 class="mb-6 text-3xl font-semibold gap-x-3 text-white">
    {t("about_me")}
  </h2>
  <article
    class="flex flex-col md:flex-row items-center justify-between gap-20"
  >
    <div
      class="font-medium [&>p>strong]:text-[#FFEF9B] [&>p>strong]:font-medium flex flex-col gap-6 [&>p>i]:text-[#279EFF] [&>p>i]:font-medium [&>p>i]:not-italic text-lg"
    >
      <p>
        <strong>{t("aboutme").introduction}</strong>
      </p>

      <p>
        {t("aboutme").iam}
        <i>{t("aboutme").title}</i>{t("aboutme").complement}
      </p>

      <p>
        {t("aboutme").current_act}<strong> freelancer</strong>
        {t("aboutme").in}
      </p>
    </div>

    <img
      src="/aboutme-pic.jpg"
      alt="german-pic"
      class="w-[270px] h-[270px] rounded-3xl hover:rotate-6 transition ease-out"
    />
  </article>
</section>
