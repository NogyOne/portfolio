---
import LanguageSelector from "../components/LanguageSelector.jsx";

const NAVLINKS = [
  {
    title: "Experience",
    alt: "briefcase",
    icon: "/icons/experience.svg",
    href: "#experience",
  },

  {
    title: "Projects",
    alt: "code",
    icon: "/icons/code.svg",
    href: "#projects",
  },

  {
    title: "About Me",
    alt: "user",
    icon: "/icons/user.svg",
    href: "#about-me",
  },
];
---

<header class="flex flex-col justify-center items-center w-full">
  <LanguageSelector client:visible />

  <div class="flex flex-col justify-center items-center fixed z-40 mt-20">
    <nav
      class="w-auto flex justify-center items-center backdrop-blur-lg bg-[#3f519480] rounded-full gap-4 py-2 px-4 backdrop-opacity-95 mt-6"
    >
      <div class="border-r border-gray-500">
        <a href="#home">
          <div
            class="p-1 border-gray-400 border bg-[#222E44] hover:border-[#279EFF] rounded-full mr-6 w-12 h-12 transform hover:scale-x-125 hover:scale-y-125 transition duration-300 ease-out"
          >
            <img src="/avatar.jpeg" alt="avatar" class="rounded-full w-10" />
          </div>
        </a>
      </div>

      <div class="flex items-center justify-center gap-4 ml-4">
        {
          NAVLINKS.map((navlink) => (
            <a href={navlink.href}>
              <div class="p-2 border-gray-400 border bg-[#222E44] rounded-full w-12 h-12 transform hover:scale-x-125 hover:scale-y-125 transition duration-300 ease-out hover:border-[#279EFF]">
                <img
                  src={navlink.icon}
                  alt={navlink.alt}
                  class="rounded-full w-8"
                />
              </div>
            </a>
          ))
        }
      </div>
    </nav>
  </div>
</header>
