---
import Header from "../components/Header.astro";

const { title } = Astro.props;
const { currentLocale } = Astro;
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Portfolio de proyectos personales de German G. Ingeniero de Software / Desarrollador Junior"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative">
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-[#1b1c27] bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>

    <Header />
    <slot />
  </body>
</html>
<style is:global>
  :root {
  }
  html {
    font-family: "Montserrat", system-ui, sans-serif;
    margin: 0 auto;
    scroll-behavior: smooth;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    color: white;
    overflow-x: hidden;
  }
</style>
